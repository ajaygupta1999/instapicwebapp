<!DOCTYPE html>

<html>
<head>
	<title>Instapic app</title>
	<meta charset="UTF-8">
	<!-- external styling	 -->
	<link rel="stylesheet" type="text/css" href="/css/index.css">
	<link rel="stylesheet" type="text/css" href="/css/new.css">
	<link rel="stylesheet" type="text/css" href="/css/show.css">
	<link rel="stylesheet" type="text/css" href="/css/profile.css">
	<link rel="stylesheet" type="text/css" href="/css/creator.css">
	<link rel="stylesheet" type="text/css" href="/css/notification.css">
	<link rel="stylesheet" type="text/css" href="/css/whatsapp.css">
	<script
  src="https://code.jquery.com/jquery-3.4.1.min.js"
  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
  crossorigin="anonymous"></script>
	
	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<!-- BOOTSTRAP 4 CDN   -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	
     <!-- FONT AWESOME CDN 	-->
	 <script src="https://kit.fontawesome.com/7fe6b58c32.js"></script>
    
	<!-- GOOGLE FONTS	-->
	<link href="https://fonts.googleapis.com/css?family=Muli:400,600&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
 
</head>
<body id="body">
	
	 <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-light fixed-top" id="navbar">
		   
		
			  <a class="navbar-brand" href="/instapic"><i class="fab fa-instagram"></i>Instapic</a>
		  <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="/instapic">Home<span class="sr-only">(current)</span></a>
            </li>
			  <li class="nav-item">
              <a class="nav-link" href="/instapic/new">Add Post</a>
            </li>
          </ul>
		  
			
		  <!-- Search box	 --> 
		 <button type="button" class="btn btn-primary" id="see-comments" data-toggle="modal" data-target="#searchbox">
	        <i class="fas fa-search"></i>							 
       </button>
		  
		<div class="collapse navbar-collapse" id="navbarSupportedContent">	
          <ul class="navbar-nav ml-auto">
			<% if(!CurrentUser){  %>
			  <li class="nav-item"><a class="nav-link" href="/login">Login<i class="fas fa-user-circle"></i> </a></li> 
		     <li class="nav-item"><a class="nav-link" href="/register" id="login-link">Sign up<i class="fas fa-sign-in-alt"></i></a></li>
			   <li class="nav-item"><a class="nav-link" href="/creator" id="login-link-2"><i class="fas fa-user"></i></a></li>
			<% } else { %>
			 <li class="nav-item"><a class="nav-link" href="/user/<%= CurrentUser._id %>" id="login-link"><img id="navbar-avatar" data-src="<%= CurrentUser.avatar  %>"><%= CurrentUser.fullname.substring(0 , 4) %>.</a></li>
			 <li class="nav-item"><a id="logout-link" class="nav-link" href="/logout" id="login-link">Log out<i class="fas fa-sign-out-alt"></i></a></li> 
			  <li class="nav-item"><a class="nav-link" href="/creator" id="login-link-2"><i class="fas fa-user"></i></a></li>
			  <li class="nav-item"><a class="nav-link" href="#" id="notification-link"><button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModalLong">
  <i class="fas fa-bell"></i>(<%= notifications.length %>)
</button> </a></li>  
			<% } %>	
		 </ul>
	</div>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
		 </nav>
    </header>
	
<!-- POP UP Search Box  ======================-->
<!-- Modal -->
<div class="modal fade" id="searchbox" tabindex="-1" role="dialog" aria-labelledby="commentsTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header" id="search-box-model">
        <h5 class="modal-title" id="commentsTitle">
		  <div class="main-text-searchbox">
			 <div class="searchtext">
			  Search User
			 </div> 
		  </div>	
			<div class="add-comment-button">
			 <form action="/instapic" method="GET">
	              <div class="input-group mb-1 mt-1" id="comment-input">
					<input type="text" class="form-control" placeholder="Search User" aria-label="Write Comments here...." aria-describedby="button-addon2" name="search" required>
                  <div class="input-group-append">
                 <button class="btn btn-primary" type="submit" id="button-addon2">Submit</button>
                 </div>
		     	</div>
                </form>
			</div>
			<div class="close-search-button">
				<button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
			</div>
		  </h5>
      </div>
    </div>
  </div>
</div>


	
	    <% if(CurrentUser){ %>
<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Notifications</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		  <a id="notification-popup" class="dropdown-item" href="/notifications"> View past notifications</a>
         <% notifications.forEach(function(notification) { %>                          
            <a id="notification-popup2" class="dropdown-item" href="/notifications/<%= notification.id %>">
              <%= notification.fullname %> created a new photo
            </a>
         <% }); %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-md btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
	    <% } %> 
	
	 
	
	<div class="flash-container">
		<% if(error && error.length > 0){ %> 
	        <div class="alert alert-danger" role="alert" id="flash-alert">
                <%= error %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
              </button>
            </div>
		<% } %>
		 <% if(success && success.length >0) { %>
		   <div class="alert alert-success" role="alert" id="flash-alert">
             <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
             </button>
            </div>
	<%	} %>
	</div>	
     
         
	