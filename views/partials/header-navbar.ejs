<body id="body">
	<div class="our-body-content">
	<div class="screen-blocker hide-loader-div">
	</div>
	<div class="our-main-page-contants">
	 <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-light fixed-top" id="navbar">
		  <a class="navbar-brand" href="/instapic"><img id="my-logo-of-home-page" style="width: 30px; margin-top: -10px; margin-right: 3px; -webkit-filter: drop-shadow(0px 0px 0px #1342ff);" src="https://www.instapicapp.com/Images/logo.png">Instapic App</a>
		  <ul class="navbar-nav mr-auto">
			  <div class="my-navbar-left-content d-flex">
				 <li id="home-button-nav-link" class="nav-item active">
				  <a class="nav-link" href="/instapic">Home<span class="sr-only">(current)</span></a>
				 </li>
				 <li class="my-navlink-item nav-item">
				  <a class="nav-link" href="/instapic/new">Add Post</a>
				 </li>
			  </div>
          </ul>
		  <ul class="navbar-nav ml-auto">
			  <div class="my-navbar-right-content d-flex">
				  <% if(!CurrentUser){  %>
					 <li class="nav-item d-flex align-items-center">
						 <a class="nav-link" href="/login">Login<i class="fas fa-user-circle"></i></a>
					 </li> 
					 <li class="my-navlink-item nav-item d-flex align-items-center">
						 <a class="nav-link" href="/signup" id="login-link">Sign up<i class="fas fa-sign-in-alt"></i></a>
					 </li>
					 <li id="creator-nav-link" class="my-navlink-item nav-item d-flex align-items-center">
						  <a class="nav-link" href="/about" id="login-link-2"><i class="fas fa-user"></i></a>
					 </li>
				  <% }else { %>
					 <li class="nav-item d-flex align-items-center">
						 <a class="nav-link" href="/user/<%= CurrentUser._id %>" id="login-link">
							<img id="navbar-avatar" data-src="<%= CurrentUser.avatar  %>"><%= CurrentUser.fullname.substring(0 , 5) %>.						                      </a>
					 </li>
					 <li id="logout-button-nav-link-session" class="my-navlink-item nav-item d-flex align-items-center">
						 <a id="logout-link" class="nav-link" href="/logout" id="login-link">Log out<i class="fas fa-sign-out-alt"></i>                        					 </a>
					 </li> 
					 <li id="after-login-creator-navlink" class="my-navlink-item nav-item d-flex align-items-center">
						 <a class="nav-link" href="/about" id="login-link-2"><i class="fas fa-user"></i></a>
					 </li>
					 <li class="my-navlink-item nav-item d-flex align-items-center">
						 <input type="checkbox" id="checkbox-for-notification" class="d-none">
						 <div class="notification-session d-flex align-items-center justify-content-center">
							<label id="checkbox-for-notification-label" for="checkbox-for-notification">
								<i class="fas fa-bell"></i>
								<% var notilen = 0; %>
								<% for(var i = 0 ; i < notifications.length ; i++){ %>
								   <% if(notifications[i].isRead === false){ %>
										<% notilen++; %>
									<% } %>
								<% } %>
								<span>(<%= notilen %>)</span>
							</label> 
						 </div>
						 <div class="notification-container-session">
							<div class="notification-header">
								<span id="notification-just-text">Notifications</span> 
								<% var len = 0; %>
								<% for(var i = 0 ; i < notifications.length ; i++){ %>
								   <% if(notifications[i].isRead === false){ %>
										<% len++; %>
									<% } %>
								<% } %>
								<i class="fas fa-bell"></i> <span id="notification-count">(<%= len %>)</span>
							</div>
							<div class="notifications-items">
								<ul>
									<% if(notifications.length > 0){ %>
									   <% notifications.forEach(function(notification){ %>
										  <% if(notification.isRead === false){ %>
											  <li>
												<a href="/notification/<%= notification._id %>">
												   <div class="each-notification-item d-flex justify-content-between">
														<div class="notification-left-session d-flex justify-content-start">
														   <div class="each-notification-img">
															   <img data-notificationsrc="<%= notification.from.avatar %>">
														   </div>
														   <div class="each-notification-content d-flex flex-column">
															   <p class="notification-main-message">
																   <% if(notification.type === "newpost"){ %>
																	 <span class="Name-heilight"><%= notification.from.fullname %></span> posted new image  
																   <% } %>
																   <% if(notification.type === "comment"){ %>
																	 <span class="Name-heilight"><%= notification.from.fullname %></span> commented on your post
																   <% } %>
																   <% if(notification.type === "like"){ %>
																	 <span class="Name-heilight"><%= notification.from.fullname %></span> liked your post
																   <% } %>
															   </p>
															   <% if(notification.type === "newpost" || notification.type === "comment"){ %>
																  <p class="notification-comment-post-text"><%= notification.description %></p> 
															   <% } %>
															   <p class="notification-data"><%= notification.created %></p>
														   </div>
														</div>
													   <div class="notification-trigger-image">
														   <div class="notification-tigger-img-session">
															   <img data-notificationsrc="<%= notification.imgurl %>">
														   </div>
													   </div>
												   </div>
												</a>
											  </li>
										  <% } %>
									   <% }); %>
									<% } %>
									<% var len = 0; %>
									<% for(var i = 0 ; i < notifications.length ; i++){ %>
									   <% if(notifications[i].isRead === false){ %>
											<% len++; %>
										<% } %>
									<% } %>
									<% if(len === 0){ %>
									   <div class="empty-notification-box d-flex flex-column">
										   <p class="empty-notification-text">No Notifications</p>
										   <p class="notification-empty-box d-flex justify-content-center"><i class="fas fa-box-open"></i></p>
									   </div>
									<% } %>
								</ul>
							</div>
						 </div>
					 </li>
				     
				     <li class="my-navlink-dropdown-item nav-item d-flex align-items-center">
						 <div class="our-dropdown-settings-tab">
							 <input type="checkbox" id="checkbox-for-settings" class="d-none">
							 <div class="settings-gear-session d-flex align-items-center justify-content-center">
								<label id="checkbox-for-notification-label" for="checkbox-for-settings">
									<i id="navbar-settings-tab" class="fas fa-cog"></i>
								</label> 
							 </div>
							 <div class="settings-container-session">
								<div class="settings-items">
									<ul>
										<li>
											<div class="our-content-of-user">
												<a class="nav-link" href="/about" id="login-link-2"> About Us <i id="our-icon-profile" 
																														class="fas fa-user"></i></a>
											</div>
										</li>
										<li>
											<div class="our-content-of-user">
												<a id="logout-link" class="nav-link" href="/logout" id="login-link">
													Log out<i id="our-icon-profile2" class="fas fa-sign-out-alt"></i>
												</a>
											</div>
										</li>
										
									</ul>
								</div>
							 </div>
						 </div>
				     </li>
				  <% } %>	
			  </div>
		  </ul>	  
		 </nav>
    </header>

	<% if((error && error.length > 0) || (success && success.length >0)){ %>
		<div class="flash-container">
			<% if(error && error.length > 0){ %> 
				<div class="alert alert-danger" role="alert" id="flash-alert">
					<%= error %>
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
					 <span aria-hidden="true">&times;</span>
				  </button>
				</div>
			<% } %>
			 <% if(success && success.length >0) { %>
			   <div class="alert alert-success" role="alert" id="flash-alert">
				 <%= success %>
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				  <span aria-hidden="true">&times;</span>
				 </button>
				</div>
		<%	} %>
		</div>	
    <% } %>      