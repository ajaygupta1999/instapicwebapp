<% include ../partials/header %>

	<title>Password Reset| Instapic App</title> 
	<meta name="title" content="Password Reset | Instapic App" />
	<meta name="description" content="Forgot your password?. No problem, you can reset your password from here. We use email-templates for better performances."/>
	<meta name="keywords" content="Forgot, password, No problem, reset your password, email-templates" />

<% include ../partials/header-navbar %>

<div class="our-login-page-content">
	<div id="login-container">
		<div class="preloader-all-pages hide-loader-div">
				<svg class="loading-box">
					<circle class="loader" fill="none" stroke-width="3" stroke-linecap="round" cx="24" 
						  cy="24" r="17"></circle>
				</svg>
		</div>
		<div class="login-page-contant">
			<form class="submit-forms" action="/instapic/forgot/<%= token %>" method="POST">
				<center><h1 class="new-h1">Confirm Password</h1></center>
				<div class="form-group">
				  <label for="username"  class="label">New Password</label>
				  <input type="password" class="form-control" id="username" aria-describedby="emailHelp" placeholder="New Password" name="newpassword" required>
				</div>
				<div class="form-group">
				 <label for="login-login" class="label">Confirm Password</label>
					<div class="password">
					<input type="password" class="form-control" id="login-login" aria-describedby="emailHelp" placeholder="Confirm Password"  name="conpassword" required><span><button type="button" class="btn btn-outline-warning btn-md" id="eye-button-2"><i id="fa-eye" class="fas fa-eye"></i></button></span>
					</div>
				 </div>
				<button typr="submit" class="btn btn-primary btn-md btn-block">Update Password</button>	
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>