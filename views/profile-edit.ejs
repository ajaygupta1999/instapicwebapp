<% include ./partials/header %>

<div class="container" id="instapic-new">
	<form action="/user/<%= user._id %>?_method=PUT" method="POST">
        <center><h1 class="new-h1">Update your profile</h1></center>
		<div class="form-group">
          <label for="fullname"  class="label">Your Full-Name</label>
          <input type="text" class="form-control" id="fullname" aria-describedby="emailHelp" value="<%= user.fullname %>"  name="fullname" required>
        </div>
		<div class="form-group">
          <label for="profileImage"  class="label">Profile Image</label>
          <input type="text" class="form-control" id="profileImage" aria-describedby="emailHelp" value="<%= user.avatar %>"  name="avatar" required>
        </div>
		
		<div class="form-group">
          <label for="text"  class="label">Something About Yourself</label>
			<textarea class="form-control" id="text" rows="4" name="description" ><%= user.description %></textarea>
		</div>
		<button type="submit" class="btn btn-primary btn-md btn-block">submit</button>
</form>
</div>



<% include ./partials/footer %>